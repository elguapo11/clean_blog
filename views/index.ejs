<!DOCTYPE html>
<html lang="en">
  <%- include ('layouts/header'); -%>

  <body>
    <!-- Navigation -->
    <%- include('layouts/navbar');-%>

    <!-- Page Header -->

    <header
      class="masthead"
      style="background-image: url('/img/chess_logo.png')"
    >
      <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
          <div class="col-md-10 col-lg-8 col-xl-7">
            <div class="site-heading">
              <h1>The Salt Lake City Chess Club</h1>
              <span class="subheading">It's not just a boardgame, it's about building the culture</span>
            </div>
          </div>
        </div>
      </div>
    </header>
    <!-- Main Content-->
    <div class="centered-images-container">
      <img src="/img/chess_table.jpg" class="centered-image">
      <img src="/img/chess_loki.jpg" class="centered-image">
      <img src="/img/chess_loki_2.jpg" class="centered-image">
      <img src="/img/chess_jim.jpg" class="centered-image">
      <img src="/img/chess_loki_3.jpg" class="centered-image">
      <img src="/img/chess_loki_4.jpg" class="centered-image">
      <img src="/img/chess_atticus.jpg" class="centered-image">
      <img src="/img/chess_loki_5.jpg" class="centered-image">
      <img src="/img/chess_loki_6.jpg" class="centered-image">
      <img src="/img/chess_ganaa.jpg" class="centered-image">
      <img src="/img/chess_loki_7.jpg" class="centered-image">
    </div>
    <div class="container px-4 px-lg-5">
      <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
          <% for (var i = 0; i < blogposts.length; i++) {  %>
          <!-- Post preview-->
          <div class="post-preview">
            <a href="/post/<%= blogposts[i]._id %>">
              <h2 class="post-title"><%- blogposts[i].title %></h2>
              <h3 class="post-subtitle"><%- blogposts[i].body %></h3>
            </a>
            <!-- <p class="post-meta">Posted by
              <a href='#'><%= blogposts[i].userid.username %></a>
              on <%= blogposts[i].datePosted.toDateString() %></p> -->
          </div>
          <!-- <hr class="my-4" /> -->
          <%}%>

          <!-- Pager-->
          <!-- <div class="d-flex justify-content-end mb-4">
            <a class="btn btn-primary text-uppercase" href="#!">
              Older Posts â†’
            </a>
          </div> -->
        </div>
      </div>
    </div>
    <!-- <hr /> -->
    <!-- Footer-->
    <%- include ('layouts/footer'); -%> <%- include ('layouts/scripts'); -%>
  </body>
</html>
